DJANGO_SECRET_KEY=replace-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

POSTGRES_DB=design1
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Google OAuth (Admin login)
# Must match the OAuth client ID used by the admin frontend (VITE_GOOGLE_CLIENT_ID).
GOOGLE_OAUTH_CLIENT_ID=

# Google OAuth (Mobile app login)
# Used by /api/v1/auth/google/config/ and /api/v1/auth/google/.
GOOGLE_OAUTH_MOBILE_CLIENT_ID=

# Email (used by login/setup 2FA OTP delivery)
# For local dev, console backend prints emails in backend logs.
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=no-reply@seerahpod.local
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=1
EMAIL_USE_SSL=0
